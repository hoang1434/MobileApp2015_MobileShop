<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mobileapp2015" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProductDetail"
            android:label="Chi tiết sản phẩm"></activity>
        <activity android:name=".Order"
            android:label="Order"></activity>
        <activity android:name=".LoginActivity"
            android:label="Đăng nhập"></activity>
        <activity android:name=".RegisterActivity"
            android:label="Đăng ký"></activity>
        <activity android:name=".UserInfoActivity"
            android:label="Thông tin tài khoản"></activity>
        <activity android:name=".ViewOrdersActivity"
            android:label="Danh sách đơn hàng"></activity>
        <activity android:name=".ViewOrderDetailActivity"
            android:label="Chi tiết đơn hàng"></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
</manifest>
